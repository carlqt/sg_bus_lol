.row
  %ul.accordion{ :"data-accordion" => true }
    = hb 'each stations' do
      %li.accordion-navigation
        %a{ href: "#panel{{code}}", class: "text-center station", "data-panel" => "{{code}}" } {{ description }}({{code}})
        .panel-container{ id: "{{code}}", hidden: true }
          = hb 'each buses' do
            %div{ :class => "text-center", id: "panel{{station_code}}"}
              %a{ "href" => "{{url}}", "class" => "round button {{colorCode arrival_time}}" } {{ bus_code }}
              = hb "displayTime arrival_time"

